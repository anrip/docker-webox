#!/bin/sh
#

export APP_PID_FILE=/run/sshd.pid

#####################################################################

app_start() {

    /usr/sbin/sshd -D &

}

app_stop() {

    kill -TERM `cat ${APP_PID_FILE}`

}

app_reload() {

    kill -HUP `cat ${APP_PID_FILE}`

}

app_restart() {

    app_stop && sleep 3 && app_start

}

app_helper() {

    local DOES="start|stop|reload|restart"

    if ! echo "|$DOES|" | grep -q "|$1|"; then
        echo "Usage: webox ssh {$DOES}"
        exit 1
    fi

}

#####################################################################

app_helper $1

echo "${1} sshd ..."
app_${@}

if [ ${?} -ne 0 ]; then
    echo "${1} sshd failed"
fi
