#!/bin/sh
#

set -xe

#####################################################################

cd ~

name=webox-linux-v11.tgz

wget -O ${name} http://get.vmlu.com/webox/${name}?v11.3.3
tar -xf ${name} && rm -f ${name}

rm -r ~/srv/etc/nginx/*/sample-*
rm -r ~/srv/var/www/default/*
rm -f ~/srv/service

cp -a ~/srv/* /srv/
rm -r ~/srv

#####################################################################

rm -rf /srv/var/run
ln -sf /run /srv/var/run

cp -a /srv/etc /srv/var /opt/

#####################################################################

chmod +x /srv/sbin/run-cron
chmod +x /srv/sbin/sys-init
chmod +x /srv/etc/init.d/*
chmod +x /srv/service

rm -f /deploy
