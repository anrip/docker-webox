#!/bin/sh
#

set -xe

#####################################################################

cd ~

name=webox-linux-v10.tgz

wget -O ${name} http://get.vmlu.com/webox/${name}?v10.4.0
tar -xf ${name} && rm -f ${name}

rm -r ~/srv/etc/nginx/vhost.d/sample-host
rm -r ~/srv/var/www/default/*
cp -a ~/srv/* /srv/
rm -r ~/srv

#####################################################################

rm -rf /srv/var/run
ln -sf /run /srv/var/run

cp -a /srv/etc /srv/var /opt/

#####################################################################

chmod +x /srv/sbin/run-cron
chmod +x /srv/sbin/sys-init
chmod +x /srv/service

rm -f /deploy
