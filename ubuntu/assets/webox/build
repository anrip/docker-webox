#!/bin/sh
#

set -xe

apt update
apt install -y wget

#####################################################################

name=Webox-$(uname -s)-$(uname -m)-v10.tgz

wget -c http://get.vmlu.com/webox/${name}
tar -xf ${name} && rm ${name}

sed -i 's/ln -s/cp -a/' ~/srv/webox/wbx_install

cp -a ~/srv/* /srv/
rm -r ~/srv

#####################################################################

chmod +x /srv/init.sh
chmod +x /srv/webox/bin/*

rm -rf /var/cache/apt/*
rm -rf /var/log/*.log
rm -rf /var/log/apt/*.log
rm -rf /var/lib/apt/lists/*
rm -rf /var/lib/webox

rm -f /srv/webox/build
